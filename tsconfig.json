{
  "extends": "@kikiutils/tsconfigs/esnext/esnext.json",
  "compilerOptions": {
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": [
    "./scripts",
    "./src",
    "./tests"
  ]
}
